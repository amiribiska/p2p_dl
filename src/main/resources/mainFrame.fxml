<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="800" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25">

    <!-- Top Section: Label, TextField, Add File Button -->
    <top>
        <HBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label text="File:" />
            <TextField fx:id="fileTextField" HBox.hgrow="ALWAYS" />
            <Button fx:id="addFileButton" text="Add File" />
        </HBox>
    </top>

    <!-- Center Section: Table -->
    <center>
        <TableView fx:id="fileTable" prefHeight="300">
            <columns>
                <TableColumn prefWidth="200" text="File Name" />
                <TableColumn prefWidth="100" text="Size" />
                <TableColumn prefWidth="150" text="Status" />
                <TableColumn prefWidth="150" text="Progress" />
            </columns>
        </TableView>
    </center>

    <!-- Bottom Section -->
    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- Buttons under table -->
            <HBox spacing="10">
                <Button fx:id="downloadButton" text="Download" />
                <Button fx:id="selectButton" text="Select" />
                <Button fx:id="pauseButton" text="Pause" />
                <Button fx:id="cancelButton" text="Cancel" />
                <Button fx:id="createDLButton" text="Create DL File" />
            </HBox>

            <!-- Logs TextArea -->
            <TextArea fx:id="logTextArea" editable="false" prefRowCount="5" />

            <!-- Download and Upload Rate Labels -->
            <HBox spacing="20">
                <Label text="Download Rate:" />
                <Label fx:id="downloadRateLabel" text="0 kB/s" />
                <Label text="Upload Rate:" />
                <Label fx:id="uploadRateLabel" text="0 kB/s" />
            </HBox>

        </VBox>
    </bottom>

</BorderPane>
